<?xml version="1.0" encoding="utf-8"?>
<extension version="3.8" type="template" client="site" method="upgrade">
	<name>JSEnt</name>
	<creationDate>2018-02-14</creationDate>
	<author>Thomas Hunziker</author>
	<authorEmail>bakual@bakual.net</authorEmail>
	<authorUrl>http://www.bakual.net</authorUrl>
	<copyright>Â© 2018</copyright>
	<license>https://creativecommons.org/licenses/by-sa/3.0/</license>
	<version>1.0</version>
	<description>TPL_JSENT_XML_DESCRIPTION</description>

	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<folder>admin</folder>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>lib</folder>
	</files>

	<positions>
		<position>article</position>
		<position>afterheader</position>
		<position>beforefooter</position>
		<position>footer</position>
		<position>footer-nav</position>
		<position>header</position>
		<position>bottom</position>
		<position>contentleft</position>
		<position>contentright</position>
		<position>content-top</position>
		<position>content-bottom</position>
		<position>login</position>
		<position>logo</position>
		<position>position-0</position>
		<position>position-1</position>
		<position>position-1-1</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
		<position>position-8</position>
		<position>position-9</position>
		<position>position-10</position>
		<position>position-11</position>
		<position>position-12</position>
		<position>position-13</position>
		<position>position-14</position>
		<position>position-15</position>
		<position>position-16</position>
		<position>top</position>
		<position>topmenu</position>
		<position>toolbar</position>
	</positions>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="colorVariation"
					type="list"
					default="blue"
					label="TPL_JSENT_TEMPLATESTYLE"
					description="TPL_JSENT_TEMPLATESTYLE_DESC"
				>
					<option value="blue">TPL_JSENT_BLUE</option>
					<option value="red">TPL_JSENT_RED</option>
					<option value="green">TPL_JSENT_GREEN</option>
					<option value="dark">TPL_JSENT_DARK</option>
					<option value="light">TPL_JSENT_LIGHT</option>
				</field>
				<field
					name="templateWidth"
					type="text"
					default="920px"
					label="TPL_JSENT_TEMP_WIDTH"
					description="TPL_JSENT_TEMP_WIDTH_DESC"
				/>
				<field
					name="sidebarWidth"
					type="text"
					default="25"
					label="TPL_JSENT_SIDEBAR_WIDTH"
					description="TPL_JSENT_SIDEBAR_WIDTH_DESC"
				/>
				<field
					name="cellpadding"
					type="text"
					default="0.5em"
					label="TPL_JSENT_CELLPADDING"
					description="TPL_JSENT_CELLPADDING_DESC"
				/>
				<field type="spacer"/>
				<field
					name="backgroundcolor"
					label="TPL_JSENT_BGCOLOR"
					type="color"
				/>
				<field
					name="background"
					label="TPL_JSENT_BGIMAGE"
					type="media"
					directory="stories"
				/>
				<field
					name="containercolor"
					label="TPL_JSENT_CONTAINERCOLOR"
					type="color"
					description="TPL_JSENT_CONTAINERCOLOR_DESC"/>
			</fieldset>

			<fieldset name="TPL_JSENT_TYPO">
				<field
					name="googleFont"
					type="radio"
					label="Google Font"
					class="btn-group btn-group-yesno"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="googleFontFamily"
					type="text"
					label="&lt;b&gt;h3&lt;/b&gt; - Google Font Family"
					showon="googleFont:1"
					default="Carrois Gothic"
				/>
				<field type="spacer"/>
				<field
					name="fontfamily"
					type="text"
					default="Helvetica, Arial, sans-serif"
					label="TPL_JSENT_FONTFAMILY"
					description="TPL_JSENT_FONTFAMILY_DESC"
				/>
				<field
					name="fontsize"
					type="text"
					default="14px"
					label="TPL_JSENT_FONTSIZE"
					description="TPL_JSENT_FONTSIZE_DESC"
				/>
				<field
					name="fontcolor"
					type="color"
					label="TPL_JSENT_FONTCOLOR"
					description="TPL_JSENT_FONTCOLOR_DESC"
				/>
				<field
					name="linkcolor"
					type="color"
					label="TPL_JSENT_LINKCOLOR"
					default="#6699CC"
					description="TPL_JSENT_LINKCOLOR_DESC"
				/>
			</fieldset>
			<fieldset name="advanced">
				<field
					name="backlink"
					label="TPL_JSENT_BACKLINK"
					description="TPL_JSENT_BACKLINK_DESC"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
				>
					<option value="1">JSHOW</option>
					<option value="0">JHIDE</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>